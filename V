    <script>
        let currentUser = null;
        let userLinks = [];
        
        // Simulate user database
        let users = JSON.parse(localStorage.getItem('users') || '[]');
        let clickData = JSON.parse(localStorage.getItem('clickData') || '{}');

        function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            const user = users.find(u => u.email === email && u.password === password);
            if (user) {
                currentUser = user;
                showDashboard();
                loadUserData();
            } else {
                alert('‚ùå Invalid credentials! Please try again.');
            }
        }

        function signup() {
            const email = document.getElementById('signupEmail').value;
            const password = document.getElementById('signupPassword').value;
            const confirm = document.getElementById('confirmPassword').value;
            
            if (password !== confirm) {
                alert('‚ùå Passwords do not match!');
                return;
            }
            
            if (users.find(u => u.email === email)) {
                alert('‚ùå Email already exists!');
                return;
            }
            
            const newUser = { email, password, links: [], totalClicks: 0, earnings: 0 };
            users.push(newUser);
            localStorage.setItem('users', JSON.stringify(users));
            
            currentUser = newUser;
            showDashboard();
            loadUserData();
            alert('üéâ Account created successfully!');
        }

        function showDashboard() {
            document.getElementById('authSection').style.display = 'none';
            document.getElementById('dashboard').style.display = 'block';
        }

        function logout() {
            currentUser = null;
            document.getElementById('authSection').style.display = 'flex';
            document.getElementById('dashboard').style.display = 'none';
        }

        function addLink() {
            const url = document.getElementById('newLink').value;
            if (!url) {
                alert('‚ùå Please enter a valid URL!');
                return;
            }
            
            const linkId = Date.now();
            const newLink = { id: linkId, url, clicks: 0, earnings: 0, dateAdded: new Date().toLocaleDateString() };
            currentUser.links.push(newLink);
            
            // Update users array
            const userIndex = users.findIndex(u => u.email === currentUser.email);
            users[userIndex] = currentUser;
            localStorage.setItem('users', JSON.stringify(users));
            
            document.getElementById('newLink').value = '';
            loadUserData();
            alert('‚úÖ Link added successfully! AI is now generating traffic...');
            
            // Simulate AI traffic generation
            simulateTrafficGeneration(linkId);
        }

        function simulateTrafficGeneration(linkId) {
            // Simulate gradual click generation
            const intervals = [5000, 10000, 15000, 20000]; // Different intervals
            
            intervals.forEach((interval, index) => {
                setTimeout(() => {
                    const clicksToAdd = Math.floor(Math.random() * 50) + 20; // 20-70 clicks
                    addClicksToLink(linkId, clicksToAdd);
                }, interval);
            });
        }

        function addClicksToLink(linkId, clicks) {
            const link = currentUser.links.find(l => l.id === linkId);
            if (link) {
                link.clicks += clicks;
                link.earnings = Math.floor(link.clicks / 2000) * 1; // \$1 per 2000 clicks
                
                currentUser.totalClicks += clicks;
                currentUser.earnings = currentUser.links.reduce((sum, l) => sum + l.earnings, 0);
                
                // Update localStorage
                const userIndex = users.findIndex(u => u.email === currentUser.email);
                users[userIndex] = currentUser;
                localStorage.setItem('users', JSON.stringify(users));
                
                loadUserData();
            }
        }

        function loadUserData() {
            document.getElementById('totalClicks').textContent = currentUser.totalClicks;
            document.getElementById('earnings').textContent = '$' + currentUser.earnings.toFixed(2);
            document.getElementById('activeLinks').textContent = currentUser.links.length;
            
            const linksList = document.getElementById('linksList');
            linksList.innerHTML = '';
            
            currentUser.links.forEach(link => {
                const linkDiv = document.createElement('div');
                linkDiv.className = 'link-item';
                linkDiv.innerHTML = `
                    <strong>üîó ${link.url}</strong><br>
                    üìä Clicks: ${link.clicks} | üí∞ Earned: $${link.earnings.toFixed(2)} | üìÖ Added: ${link.dateAdded}
                    <button class="btn" onclick="deleteLink(${link.id})" style="float: right; background: #dc3545; padding: 5px 10px; font-size: 12px;">Delete</button>
                `;
                linksList.appendChild(linkDiv);
            });
        }

        function deleteLink(linkId) {
            currentUser.links = currentUser.links.filter(l => l.id !== linkId);
            const userIndex = users.findIndex(u => u.email === currentUser.email);
            users[userIndex] = currentUser;
            localStorage.setItem('users', JSON.stringify(users));
            loadUserData();
            alert('üóëÔ∏è Link deleted successfully!');
        }

        function requestPayout() {
            if (currentUser.earnings >= 1) {
                alert(`üí≥ Payout request of $${currentUser.earnings.toFixed(2)} submitted! You'll receive payment within 24-48 hours via PayPal.`);
                currentUser.earnings = 0;
                currentUser.links.forEach(link => link.earnings = 0);
                const userIndex = users.findIndex(u => u.email === currentUser.email);
                users[userIndex] = currentUser;
                localStorage.setItem('users', JSON.stringify(users));
                loadUserData();
            } else {
                alert('‚ùå Minimum payout is \$1.00. Keep earning!');
            }
        }

        // Initialize demo data
        if (users.length === 0) {
            users.push({
                email: 'demo@referclick.com',
                password: 'demo123',
                links: [{id: 1, url: 'https://example.com', clicks: 1500, earnings: 0, dateAdded: '2025-09-04'}],
                totalClicks: 1500,
                earnings: 0
            });
            localStorage.setItem('users', JSON.stringify(users));
        }
    </script>
